package main;

import java.util.ArrayList;

public class Banco {
	ArrayList<Cuenta> cuentas;
	
	
	public Banco(ArrayList<Cuenta> cuentas) {
		super();
		this.cuentas = cuentas;
	}
	public void abrirCuenta(int id, double saldo, Tipo tipo) {
		Cuenta nuevaCuenta = new Cuenta(id,saldo,tipo);
		cuentas.add(nuevaCuenta);
	}
	public void cerrarCuenta(Cuenta cuenta) {
		
		cuentas.remove(cuentas.indexOf(cuenta));
	}
	
}
